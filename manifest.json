{
  "manifest_version": 3,
  "name": "Canvas On Top",
  "version": "1.0",
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*"],
      "exclude_matches": ["https://www.instructure.com/*"],
      "css": ["assets/style.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["assets/*"],
    "matches": ["https://*.instructure.com/*"]
  }],
  "host_permissions": [
    "https://your-canvas-instance.com/*",
    "https://api.openai.com/*"
  ],
  "permissions": [
    "tabs",
    "sidePanel",
    "storage"
  ]
}
